{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext} {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId", "WithCorrelationId" ]
  },
  "KeyCloakHost": "http://keycloak:8080",
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "HangfirePostgreSQL": "Host=hangfire-db;Port=5432;Database=HangfireDatabase;Username=hangfire;Password=hangfirepass",
    "PostgreSQL": "Host=db;Port=5432;Database=ModuleBankAppDatabase;Username=postgres;Password=root"
  },
  "RabbitMq": {
    "HostName": "rabbitmq",
    "UserName": "guest",
    "Password": "guest",
    "VirtualHost": "/",
    "ExchangeName": "account.events"
  }
}
